# ============================================================================
# Hateful Meme Detection - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================================
# Discord Bot Configuration
# ============================================================================
# Get your bot token from Discord Developer Portal
# https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Channel ID to monitor (optional - monitors all channels if not set)
MONITORED_CHANNEL_ID=123456789012345678

# Bot command prefix
COMMAND_PREFIX=!mod 

# ============================================================================
# Model Configuration
# ============================================================================
# Path to trained model checkpoint
MODEL_PATH=models/best_model.pth

# Classification thresholds
OPTIMAL_THRESHOLD=0.4274
SAFE_THRESHOLD=0.37
WARNING_THRESHOLD=0.42

# ============================================================================
# Training Configuration (optional)
# ============================================================================
# Path to dataset directory
DATA_DIR=data/hateful_memes

# Output directory for models and logs
OUTPUT_DIR=outputs/

# ============================================================================
# System Configuration
# ============================================================================
# Device to use (cuda or cpu)
DEVICE=cuda

# Number of data loading workers
NUM_WORKERS=4

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# API Configuration (if deploying as API)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
